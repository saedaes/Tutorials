<p id="notice"><%= notice %></p>

<h1>Materias</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Materia</th>
      <th>Tipo</th>
      <th colspan="3" style="text-align:center;">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.Name %></td>
        <td><%= subject.Type %></td>
        <td style="text-align:center;"><%= link_to subject, style: 'color:#0056b3;' do%> <span class="oi oi-eye"></span> <%end%></td>
        <td style="text-align:center;"><%= link_to edit_subject_path(subject), style: 'color:#0056b3;' do%> <span class="oi oi-pencil"></span> <%end%></td>
        <td style="text-align:center;"><%= link_to subject, method: :delete, data: { confirm: 'Estas seguro?' }, style: 'color:#0056b3;' do%> <span class="oi oi-trash"></span> <%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Materia Nueva', new_subject_path, class:'btn btn-outline-info' %>
