<p id="notice"><%= notice %></p>

<h1>Lugares asignados a Asesores</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Maestro</th>
      <th>Lugar</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @teacher_places.each do |teacher_place| %>
      <tr>
        <td><%= teacher_place.teacher.Name %></td>
        <td><%= teacher_place.place.Name %></td>
        <td style="text-align:center;"><%= link_to 'Ver', teacher_place %></td>
        <td style="text-align:center;"><%= link_to 'Editar', edit_teacher_place_path(teacher_place) %></td>
        <td style="text-align:center;"><%= link_to 'Eliminar', teacher_place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Asignar relacion Maestro-Lugar', new_teacher_place_path, class:'btn btn-outline-info' %>
