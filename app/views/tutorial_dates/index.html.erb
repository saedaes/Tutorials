<p id="notice"><%= notice %></p>

<h1>Fecha de asesor&iacute;a</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Matr&iacute;cula</th>
      <th>Id Horario</th>
      <th>Fecha</th>
      <th>Temas</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @tutorial_dates.each do |tutorial_date| %>
      <tr>
        <td><%= tutorial_date.StudentRegister %></td>
        <td><%= tutorial_date.IdShedule %></td>
        <td><%= tutorial_date.Date %></td>
        <td><%= tutorial_date.Topic %></td>
        <td style="text-align:center"><%= link_to 'Ver', tutorial_date %></td>
        <td style="text-align:center"><%= link_to 'Editar', edit_tutorial_date_path(tutorial_date) %></td>
        <td style="text-align:center"><%= link_to 'Eliminar', tutorial_date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Asignar nueva asesoria', new_tutorial_date_path, class:'btn btn-outline-info' %>
