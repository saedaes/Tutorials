<p id="notice"><%= notice %></p>

<h1>Fecha de asesor&iacute;a</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Matr&iacute;cula</th>
      <th>Id Horario</th>
      <th>Fecha</th>
      <th>Temas</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @tutorial_dates.each do |tutorial_date| %>
      <tr>
        <td><%= tutorial_date.StudentRegister %></td>
        <td><%= tutorial_date.IdShedule %></td>
        <td><%= tutorial_date.Date %></td>
        <td><%= tutorial_date.Topic %></td>
        
        <td style="text-align:center;"><%= link_to tutorial_date, style: 'color:#0056b3;' do%> 
          <span class="oi oi-eye"></span> 
          <%end%>
        </td>
        <td style="text-align:center;">
          <%= link_to edit_tutorial_date_path(tutorial_date), style: 'color:#0056b3;' do%> 
            <span class="oi oi-pencil"></span> 
          <%end%>
        </td>
        <td style="text-align:center;">
          <%= link_to tutorial_date, method: :delete, data: { confirm: 'Estas seguro?' }, style: 'color:#0056b3;' do%> 
            <span class="oi oi-trash"></span>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Asignar nueva asesoria', new_tutorial_date_path, class:'btn btn-outline-info' %>
