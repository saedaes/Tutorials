<p id="notice"><%= notice %></p>

<h1>Asesor&iacute;as Disponibles</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Materia</th>
      <th>Cuenta_Maestro</th>
      <th>Lugar</th>
      <th>D&iacute;a</th>
      <th>Hora_Inicio</th>
      <th>Hora_Fin</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= Subject.find(schedule.IdSubject).Name %></td>
        <td><%= Teacher.find(schedule.TeacherAccount).TeacherUser %></td>
        <td><%= Place.find(schedule.IdPlace).Name %></td>
        <td><%= schedule.Day %></td>
        <td><%= schedule.BeginHour %></td>
        <td><%= schedule.EndHour %></td>
        <td style="text-align:center;"><%= link_to 'Ver', schedule %></td>
        <td style="text-align:center;"><%= link_to 'Editar', edit_schedule_path(schedule) %></td>
        <td style="text-align:center;"><%= link_to 'Eliminar', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
         
     </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Asignar nueva asesoria', new_schedule_path, class:'btn btn-outline-info'  %>

