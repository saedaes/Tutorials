<%= form_with(model: schedule, local: true) do |form| %>
  <% if schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-2">
      <%= form.label :Materia %>
    </div>
    <div class="col-sm-2">
      <%= form.select :IdSubject, Subject.all.map{|t| [t.Name, t.id]}, {}, {class: "form-control"}  %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <%= form.label :Maestro %>
    </div>
    <div class="col-sm-2">
      <%= form.select :TeacherAccount, Teacher.all.map{|t| [t.Name, t.id]}, {}, {class: "form-control"}  %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <%= form.label :Lugar %>
    </div>
    <div class="col-sm-2">
      <%= form.select :IdPlace, Place.all.map{|t| [t.Name, t.id]}, {}, {class: "form-control"}  %>
    </div>
  </div>

  <div class="field">
    <%= form.label :Dia %>
    <%= form.select :Day, @days, {},class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :Hora_Inicio %>
    <%= form.time_select :BeginHour, {}, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :Hora_Fin %>
    <%= form.time_select :EndHour %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
