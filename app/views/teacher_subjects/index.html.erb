<p id="notice"><%= notice %></p>

<h1>Materias asignadas a Asesores</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Cuenta Maestro</th>
      <th>Id Materia</th>
      <th>Materia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teacher_subjects.each do |teacher_subject| %>
      <tr>
        <td><%= teacher_subject.TeacherAccount %></td>
        <td><%= teacher_subject.IdSubject %></td>
         <td><%= Subject.find(teacher_subject.IdSubject).Name %></td>
        <td style="text-align:center;"><%= link_to 'Ver', teacher_subject %></td>
        <td style="text-align:center;"><%= link_to 'Editar', edit_teacher_subject_path(teacher_subject) %></td>
        <td style="text-align:center;"><%= link_to 'Eliminar', teacher_subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Asignar relacion Maestro-Lugar', new_teacher_subject_path, class:'btn btn-outline-info' %>