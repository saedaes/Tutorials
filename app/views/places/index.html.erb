<p id="notice"><%= notice %></p>

<h1>Lugares</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ubicaci&oacute;n</th>
      <th>Descripci&oacute;n</th>
      <th colspan="3" style="text-align:center;">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.Name %></td>
        <td><%= place.Location %></td>
        <td><%= place.Description %></td>
        <td style="text-align:center;"><%= link_to place, style: 'color:#0056b3;' do%> <span class="oi oi-eye"></span> <%end%></td>
        <td style="text-align:center;"><%= link_to edit_place_path(place), style: 'color:#0056b3;' do%> <span class="oi oi-pencil"></span> <%end%></td>
        <td style="text-align:center;"><%= link_to place, method: :delete, data: { confirm: 'Estas seguro?' }, style: 'color:#0056b3;' do%> <span class="oi oi-trash"></span> <%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Lugar Nuevo', new_place_path, class:'btn btn-outline-info' %>

