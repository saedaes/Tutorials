<!DOCTYPE html>
<html>
  <head>
    <title>Tutorials</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Inicio</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Maestros', teachers_path, class:'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Alumnos', students_path, class:'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Usuarios', users_path, class:'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Lugares', places_path, class:'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Materias', subjects_path, class:'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Perfiles', profiles_path, class:'nav-link' %>
        </li>
      </ul>
      <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>
    <div style="padding:10px;">
        <%= yield %>
    </div>
  </body>
</html>
