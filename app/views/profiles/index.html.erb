<p id="notice"><%= notice %></p>

<h1>Perfiles de Usuario</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Identificador</th>
      <th>Perfil</th>
      <th>Descripci&oacute;n</th>
      <th colspan="3" style="text-align:center;">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.id %></td>
        <td><%= profile.Name %></td>
        <td><%= profile.Description %></td>
        <td style="text-align:center;"><%= link_to profile, style: 'color:#0056b3;' do%> <span class="oi oi-eye"></span> <%end%></td>
        <td style="text-align:center;"><%= link_to edit_profile_path(profile), style: 'color:#0056b3;' do%> <span class="oi oi-pencil"></span> <%end%></td>
        <td style="text-align:center;"><%= link_to profile, method: :delete, data: { confirm: 'Estas seguro?' }, style: 'color:#0056b3;' do%> <span class="oi oi-trash"></span> <%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Nuevo Perfil', new_profile_path, class:'btn btn-outline-info' %>
