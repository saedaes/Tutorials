<p id="notice"><%= notice %></p>

<h1>Perfiles de Usuario</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Perfil</th>
      <th>Descripci&oacute;n</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.Name %></td>
        <td><%= profile.Description %></td>
        <td><%= link_to 'Ver', profile %></td>
        <td><%= link_to 'Editar', edit_profile_path(profile) %></td>
        <td><%= link_to 'Eliminar', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Nuevo Perfil', new_profile_path, class:'btn btn-outline-info' %>
