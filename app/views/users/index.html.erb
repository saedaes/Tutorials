<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Celular</th>
      <th>Correo Electr&oacute;nico</th>
      <th>Perfil</th>
      <th colspan="3" style="text-align:center;">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.UserAccount %></td>
        <td><%= user.Name %></td>
        <td><%= user.LastName %> <%= user.SecondLastName %></td>
        <td><%= user.Cellphone %></td>
        <td><%= user.Email %></td>
        <td><%= user.IdProfile %></td>
        <td style="text-align:center;"><%= link_to user, style: 'color:#0056b3;' do%> <span class="oi oi-eye"></span> <%end%></td>
        <td style="text-align:center;"><%= link_to edit_user_path(user), style: 'color:#0056b3;' do%> <span class="oi oi-pencil"></span> <%end%></td>
        <td style="text-align:center;"><%= link_to user, method: :delete, data: { confirm: 'Estas seguro?' }, style: 'color:#0056b3;' do%> <span class="oi oi-trash"></span> <%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Usuario Nuevo', new_user_path, class:'btn btn-outline-info' %>
