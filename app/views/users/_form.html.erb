<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Usuario %>
    <%= form.text_field :UserAccount %>
  </div>

  <div class="field">
    <%= form.label :Nombre %>
    <%= form.text_field :Name %>
  </div>

  <div class="field">
    <%= form.label :Apellido_Paterno %>
    <%= form.text_field :LastName %>
  </div>

  <div class="field">
    <%= form.label :Apellido_Materno %>
    <%= form.text_field :SecondLastName %>
  </div>

  <div class="field">
    <%= form.label :Celular %>
    <%= form.text_field :Cellphone %>
  </div>

  <div class="field">
    <%= form.label :Correo %>
    <%= form.text_field :Email %>
  </div>

    
  <div class="row">
    <div class="col-sm-1">
        <%= form.label :Perfil  %>
    </div>
    <div class="col-sm-2">
        <%= form.select :IdProfile, Profile.all.map{|t| [t.Name, t.id]}, {}, {class: "form-control"}  %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
